{
  "name": "isek-ui",
  "version": "1.0.0",
  "description": "P2P Multi-Agent Chat Demo",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:frontend": "next dev",
    "dev:backend": "cd ../pybackend && python app.py",
    "dev:electron": "wait-on http://localhost:3000 && electron main.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "next build",
    "build:backend": "cd ../pybackend && pyinstaller --onefile --distpath ../dist app.py --name pyserver",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "install:all": "npm install && cd ../pybackend && pip install -r requirements.txt"
  },
  "build": {
    "appId": "com.isek.ui",
    "productName": "ISEK UI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "dist/pyserver*"
    ],
    "extraResources": [
      {
        "from": "dist/pyserver*",
        "to": "pyserver*"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@assistant-ui/react": "^0.10.9",
    "@assistant-ui/react-ai-sdk": "^0.10.9",
    "@assistant-ui/react-markdown": "^0.10.3",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "ai": "^4.3.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "node": "^22.17.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-is-dev": "^2.0.0"
  }
}
 